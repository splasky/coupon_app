<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/content_coupon_layout"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView_couponAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="couponAddress"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="179dp" />

    <TextView
        android:id="@+id/textView_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="limit"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="212dp" />

    <TextView
        android:id="@+id/textView_obtainValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="obtainValue"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="248dp" />

    <TextView
        android:id="@+id/textView_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="status"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="179dp" />

    <TextView
        android:id="@+id/textView_startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startDate"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="212dp" />

    <TextView
        android:id="@+id/textView_obtainDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="obtainDate"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="248dp" />

    <TextView
        android:id="@+id/textView_consumeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="consumeDate"
        tools:layout_editor_absoluteX="210dp"
        tools:layout_editor_absoluteY="179dp" />

    <Button
        android:id="@+id/button_nfc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="36dp"
        android:text="NFC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_qrcode"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="36dp"
        android:text="QRCode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>